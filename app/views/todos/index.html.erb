
  <main class="todo-list">
    <h1 class="todo-list__heading">My To-do List</h1>
    <%= form_with(url: "/todos/", method: "POST", class: "todo-list__add") do %>
    <%= text_field_tag("todo_text", nil, placeholder: "What's next?", class: "todo-list__text-field", required: true) %>
    <%= date_field_tag("due_date", nil, class: "todo-list__date", required: true) %>
    <%= submit_tag("Add", placeholder: "What's next?", class: "todo-list__btn") %>
    <% end %>
    <section>


      <%= render partial: "todo-section", locals: {
                   section_title: "Overdue",
                   todos: @todos.overdue.incompleted,
                   show_due_date: true,
                 } %>
        <%= render partial: "todo-section", locals: {
                     section_title: "Due Today",
                     todos: @todos.due_today,
                     show_due_date: false,
                   } %>
        <%= render partial: "todo-section", locals: {
                     section_title: "Due Later",
                     todos: @todos.due_later,
                     show_due_date: true,
                   } %>
    </section>

  </main>
